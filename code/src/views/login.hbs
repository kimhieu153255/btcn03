<div class="screen d-flex" style="height: 80vh">
  <div class="container w-25 p-5 align-self-center border rounded bg-light">
    <form action="/user/signin" method="POST">
      <div class="form-outline mb-4">
        <input
          name="username"
          id="username"
          class="form-control"
          placeholder="Username"
        />
      </div>

      <div class="form-outline mb-4">
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="Password"
        />
      </div>

      <button type="submit" class="btn btn-primary btn-block mb-4">
        Sign in
      </button>

      <div class="text-center">
        <p>Not a member?
          <a
            href="/user/register"
            name="login"
            value="register"
          >Register</a></p>
      </div>
      <div class="text-center text-danger d-{{u3}}">
        <div class="text-center">Login error</div>
      </div>
    </form>
  </div>
</div>